{
  "name": "@ebth/design-system",
  "version": "0.1.0",
  "description": "UI Component Library for EBTH",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": "git://github.com/ebth/design-system.git",
  "author": "Brandon Patram <brandon.patram@ebth.com>",
  "license": "UNLICENSED",
  "scripts": {
    "storybook:watch": "start-storybook --port 52033",
    "storybook:build": "build-storybook -c .storybook -o .out",
    "dist:build": "yarn dist:build-lib && yarn dist:gen-types",
    "dist:build-lib": "rollup --config",
    "dist:gen-ts-types": "tsc -p ./tsconfig-types.json --emitDeclarationOnly --outFile dist/index.d.ts",
    "dist:gen-flow-types": "flowgen dist/index.d.ts --add-flow-header --interface-records --output-file dist/index.flow.js",
    "dist:gen-types": "yarn dist:gen-ts-types && yarn dist:gen-flow-types",
    "dist:watch": "rollup --config -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint:prettier": "prettier --check 'src/**/*.{ts,tsx,js.jsx}'",
    "lint:flow": "flow check --flowconfig-name .flowconfig",
    "lint:ts": "tsc -p ./tsconfig.json --noEmit",
    "lint:scss": "sass-lint --config=.sass-lint.yml 'src/**/*.scss' --format=junit --output=reports/sass-lint.xml -v",
    "lint": "concurrently \"yarn:lint:prettier\" \"yarn:lint:flow\" \"yarn:lint:ts\" \"yarn:lint:scss\"",
    "build": "concurrently \"yarn:storybook:build\" \"yarn:dist:build\" \"yarn:dist:gen-types\"",
    "dev": "concurrently \"yarn:storybook:watch\" \"yarn:dist:watch\" \"yarn:test:watch\"",
    "loki:build-reference": "loki update --port 52033",
    "loki:build-reference-static": "loki update --reactUri file:.out",
    "loki:build-current": "loki update --port 52033 --reference .loki/current",
    "loki:build-current-static": "loki update --reactUri file:.out --reference .loki/current",
    "test:visual": "reg-cli .loki/current .loki/reference .loki/difference -R .loki/visual.html -J .loki/visual.json -E -A",
    "loki:approve": "loki approve"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-flow": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@storybook/addon-actions": "^5.2.0-beta.46",
    "@storybook/addon-docs": "^5.2.0-beta.45",
    "@storybook/addon-storysource": "^5.2.0-beta.46",
    "@storybook/preset-typescript": "^1.1.0",
    "@storybook/react": "^5.2.0-beta.46",
    "@storybook/source-loader": "^5.2.0-beta.45",
    "@storybook/theming": "^5.2.0-beta.45",
    "@tippy.js/react": "^2.2.3",
    "@types/classnames": "^2.2.9",
    "@types/enzyme": "^3.10.3",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/jest": "^24.0.18",
    "@types/mocha": "^5.2.7",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.0.6",
    "concurrently": "^4.1.2",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "flow-bin": "^0.106.2",
    "flowgen": "^1.10.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.9.0",
    "jest-cli": "^24.8.0",
    "jest-junit": "^8.0.0",
    "loki": "^0.17.1",
    "node-sass": "^4.12.0",
    "prettier": "^1.18.2",
    "react": "^16.9.0",
    "react-docgen-typescript-loader": "^3.1.1",
    "react-dom": "^16.9.0",
    "reg-cli": "^0.14.1",
    "rollup": "^1.20.3",
    "rollup-plugin-analyzer": "^3.1.2",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-copy": "^3.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-postcss": "^2.0.3",
    "sass-lint": "^1.13.1",
    "sass-loader": "^7.3.1",
    "ts-loader": "^6.0.4",
    "typescript": "^3.5.3"
  },
  "peerDependencies": {
    "@tippy.js/react": "^2.2.3",
    "react": ">=16.0.0",
    "react-dom": ">=16.0.0"
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "react-copy-to-clipboard": "^5.0.1"
  },
  "loki": {
    "configurations": {
      "chrome.ci.desktop": {
        "target": "chrome.app",
        "width": 1366,
        "height": 768,
        "deviceScaleFactor": 1,
        "mobile": false,
        "fitWindow": false
      },
      "chrome.local.desktop": {
        "target": "chrome.docker",
        "width": 1366,
        "height": 768,
        "deviceScaleFactor": 1,
        "mobile": false,
        "fitWindow": false
      }
    }
  }
}
